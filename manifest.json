{
  "manifest_version": 3,
  "name": "SIGAA mais acessível",
  "version": "0.1",
  "description": "Torne o sistema SIGAA mais acessível",
  "icons": {
    "16": "img/logo-16.png",
    "19": "img/logo-16.png",
    "32": "img/logo-48.png",
    "48": "img/logo-48.png",
    "128": "img/logo-128.png"
  },
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "img/logo-16.png",
      "19": "img/logo-16.png",
      "32": "img/logo-48.png",
      "48": "img/logo-48.png",
      "128": "img/logo-128.png"
    }
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "host_permissions": ["https://sig.ifsudestemg.edu.br/sigaa/"],
  "content_scripts": [
    {
      "matches": ["https://sig.ifsudestemg.edu.br/sigaa/*"],
      "css": ["src/sigaa.css"],
      "js": ["src/sigaa.js"]
    }
  ],
  "permissions": ["tabs", "storage"]
}
